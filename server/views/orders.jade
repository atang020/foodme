extends layout

block content
	div.container
		div.jumbotron
			h1 Active Orders
			div.jumbotron(style='background-color:white;')
				table.table
					thead
						tr
							th ID#
							th Table
							th time waiting
							th item
							th Notes
							th Status
							th
					tbody
						- for order in orders
							- var red = order.time * 10
							tr
								td #{order.id}
								td #{order.table}
								td(style='color:rgb(#{red},0,0);') #{order.time}
								td #{order.item}
								td #{order.notes}
								td #{order.status}
								td
									button.btn.btn-primary.btn-sm mark delivered
								td
									button.btn.btn-danger.btn-sm delete