extends layout

block header
	script(src='/js/orders.js')

block content
	div(class='modal fade', id='confirmModal', tabindex='-1', role='dialog', aria-labelledby='confirmModalLabel',aria-hidden='true')
		div(class='modal-dialog modal-sm')
			div(class='modal-header')
				button(type='button', class='close', data-dismiss='modal',aria-hidden='true') &times;
				h4(class='modal-title', id='confirmModalLabel') are you sure?
			div(class='modal-body confirm-description')
				p Are you sure you want to delete this?
			div(class='modal-footer')
				button(class='btn btn-danger', type='submit',  onclick = 'confirmCallback()') delete
				button(class='btn btn-primary', type='button', data-dismiss='modal',aria-hidden='true') cancel
	div.container
		div.jumbotron
			h3 requested waiter:
			h7 table:
			- for(var i = 0; i < tickets.length; i++)
				-if(tickets[i].call_waiter_status === 1)
					div.btn-group(id='table#{tickets[i].ticket_id}')
						div.dropdown
							button.btn-default(type='button',data-toggle='dropdown') #{tickets[i].table}
							ul.dropdown-menu(role='menu')
								li
									a(onclick='answerTable(\'#{tickets[i].ticket_id}\')') mark answered
			h1 active orders
			div.jumbotron(style='background-color:white;')
				table.table
					thead
						tr
							th Table
							th Item
							th Quantity
							th Notes
							th Actions
					tbody
						- for order in ticket_items
							tr(id='order#{order.ticket_item_id}')
								td #{order.table_number}
								td #{order.name}
								td #{order.quantity}
								td #{order.notes}
								td
									button.btn.btn-primary.btn-sm(onclick='markDelivered(\'#{order.ticket_item_id}\')') Mark Delivered
									button.btn.btn-danger.btn-sm(onclick='setConfirmModal(\'#{order.ticket_item_id}\')') Delete