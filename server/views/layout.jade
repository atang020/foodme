doctype html
html
	head
		include inc/header
		link(rel='stylesheet', href='/css/layout.css')
		script(src='/js/layout.js')
		block header
			
		body(style='padding-top: 70px')
			
					
			.navbar.navbar-default.navbar-fixed-top(role='navigation')
				.container
					.navbar-header
						button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') #{brand}
					.navbar-collapse.collapse
						ul.nav.navbar-nav
							li
								img#title-image(src='/foodme2.png')
							- var obj = {'orders':'Orders', 'menu':'Menu', 'statistics':'Statistics' }
								- if(user)
									- each val, key in obj
										- if (id == key)
											li.active
												a(href='#{key}') #{val}
										- else
											li
												a(href='#{key}') #{val}
						ul.nav.navbar-nav.navbar-right
							-if(user)
								li
									p.navbar-text(id='signInName') #{user.email}
								li
									button(class='btn btn-default navbar-btn', type='button', onClick='logout()') Sign out
							-else
								li
									p.navbar-text Not signed in
								li
									button(class='btn btn-default navbar-btn', type='button', data-toggle='modal', data-target='#loginModal') Sign in
					
			
			div(class='modal fade', id='loginModal', tabindex='-1', role='dialog', aria-labelledby='loginModalLabel',aria-hidden='true')
				div(class='modal-dialog modal-sm')
					div(class='modal-header')
						button(type='button', class='close', data-dismiss='modal',aria-hidden='true') &times;
						h4(class='modal-title', id='loginModalLabel') sign in
					form(id='loginForm')
						div(class='modal-body', action='#', method='POST')
							div(class='alert alert-error', id='loginError', style='color:red;')
							input(id='emailInput', class='signInInput', type='text', placeholder='email', name='email')
							input(class='signInInput', type='password', placeholder='password', name='password')
						div(class='modal-footer')
							button(class='btn btn-primary', type='submit') Sign in
							button(class='btn btn-default', type='button', data-dismiss='modal',aria-hidden='true') Close
		block content
		block foot
			h5#footerText(class='small') Copyright SEGFAULT 2014