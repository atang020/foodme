doctype html
html
	include inc/header
		body
			img#title-image(src='/foodme.png')
	.navbar.navbar-default.navbar-static-top(role='navigation')
		.container
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') #{brand}
			.navbar-collapse.collapse
				ul.nav.navbar-nav
					
					- var obj = { 'orders':'Orders', 'menu':'Menu', 'statistics':'Statistics', 'about':'About' }
						- each val, key in obj
							- if (id == key)
								li.active
									a(href='#{key}') #{val}
							- else
								li
									a(href='#{key}') #{val}

	block content
	block foot
		p.small Copyright SEGFAULT 2014